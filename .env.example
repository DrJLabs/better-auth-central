# Server configuration (copy to .env and replace placeholders)
BETTER_AUTH_DB_DRIVER=better-sqlite3
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=https://your-auth-domain.example.com
BETTER_AUTH_TRUSTED_ORIGINS=https://your-app-domain.example.com,http://localhost:5173
# Use the registrable parent domain (for example, .onemainarmy.com) so cookies reach sibling subdomains in production HTTPS deployments.
BETTER_AUTH_COOKIE_DOMAIN=.your-base-domain.example.com
PORT=3000

# Optional discovery smoke configuration
DISCOVERY_TIMEOUT_MS=10000

# Google OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OIDC / MCP configuration
OIDC_LOGIN_PATH=/login
OIDC_CONSENT_PATH=/consent
# Set to true only when you explicitly need to support dynamic client registration.
OIDC_DYNAMIC_REGISTRATION=false
MCP_RESOURCE=https://your-auth-domain.example.com
# Comma or space separated scopes applied when clients omit explicit scopes.
MCP_DEFAULT_SCOPES=openid profile
# JSON array describing MCP clients; keep empty brackets to start with no registry entries.
MCP_CLIENTS=[]
# Require client scopes to be present in the union of MCP_DEFAULT_SCOPES and MCP_CLIENTS scopes.
MCP_ENFORCE_SCOPE_ALIGNMENT=true
# Optional: shared secret used by the MCP compliance harness when invoking token/introspection endpoints.
MCP_COMPLIANCE_CLIENT_SECRET=
